@model Team3CAS.ViewModels.DrugViewModel

@{
    ViewBag.Title = "NewDrug";
}

<h2>NewDrug</h2>
<div class="row>"
    <div class="col-md-12">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm("NewDrug", "Drug", FormMethod.Post))
    {

  
        <div class="form-group">
            <label class="control-label">Name</label>
            @Html.TextAreaFor(x => x.Name, new { @class = "form-control", rows = "5", cols = "30" })
            <div>
                @Html.ValidationMessageFor(x => x.Name)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Composition</label>
            @Html.TextBoxFor(x => x.Composition, new { @class = "form-control", maxlength = "15" })
            <div>
                @Html.ValidationMessageFor(x => x.Composition)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Quantity</label>
            @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control", maxlength = "15" })
            <div>
                @Html.ValidationMessageFor(x => x.Quantity)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Description</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", maxlength = "15" })
            <div>
                @Html.ValidationMessageFor(x => x.Description)
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Price</label>
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control", maxlength = "15" })
            <div>
                @Html.ValidationMessageFor(x => x.Price)
            </div>
        </div>
        <div class="form-group">
            <input type="submit" name="btn1" class="btn btn-primary" value="Add Drug" />
            <input type="reset" name="btn2" class="btn btn-warning" value="Reset form" />
        </div>

}
        </div>
   </div>
</div>