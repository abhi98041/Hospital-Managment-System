@model Team3CAS.ViewModels.UserViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditProfile</title>
</head>
<body>
    <h2>Edit</h2>
    @using (Html.BeginForm("EditUser", "User", FormMethod.Post))
    {
        <table table table-bordered table-hover>
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-8 col-md-offset-2">
                        @Html.HiddenFor(x => x.UserID)
                        <div class="form-group">
                            <label class="control-label">UserName</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

                        </div>


                        <div class=" form-group">
                            <label class="control-label"> ChangePassword</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", RegularExpressionAttributeAdapter = (@"^\w+@\w+\.\w+$") })

                        </div>
                        <div class="form-group">
                            <label class="control-label">Email</label>
                            @Html.DisplayFor(x => x.MedicareId, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label class="control-label">Roles</label>
                            @Html.DisplayFor(x => x.RoleID, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label class="control-label">Sex</label>
                            @Html.DisplayFor(x => x.Sex, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label class="control-label">Status</label>
                            @Html.DisplayFor(x => x.Status, new { @class = "form-control" })

                        </div>


                        <div class="form-group">
                            <input type="submit" name="btn1" class="btn btn-primary" value="Edit Profile" />

                        </div>




                    </div>
                </div>
            </div>


        </table>
    }
</body>
</html>

