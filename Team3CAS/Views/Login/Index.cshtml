@model Team3CAS.Models.LoginUser

<h2>Login to Medicare Hospital</h2>
<div class="row">
    <div class="col-md-12">
        <div class="col-md-8 col-md-offset-2">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="form-group">
                    <label class="control-label">UserID</label>
                    @Html.TextBoxFor(x => x.UserID, new { @class = "form-control", maxlength = "50" })
                    <div>
                        @Html.ValidationMessageFor(x => x.UserID)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", maxlength = "15" } })
                    <div>
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                </div>
                <button type="submit" class="btn btn-default" value="submit">Submit</button>
                

                <div class="form-group">

                </div>

            }
        </div>
    </div>
</div>